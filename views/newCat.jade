extends layout

block content
  h1= title
  form(method="POST", action="/cats/added")
    span Name: 
    input(type="input", name="catName")
    br
    span Color: 
    select(name="color")
      option(value="white") White
      option(value="black") Black
      option(value="brown") Brown
      option(value="yellow") Yellow (cuz we can't discriminate)
    br
    span Age: 
    input(type="number", name="age", min="1", max="100", value="1")
    br
    input(type="submit", name="addCat")
    a(href="/cats")
      button Cancel
  